<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- start of component master tree -->
  <record id="view_component_master_tree" model="ir.ui.view">
    <field name="name">component.master.tree</field>
    <field name="model">component.master</field>
    <field name="arch" type="xml">
        <tree>
          <field name="name" string="Nama Komponen"/>
          <field name="process_time" string="Waktu Pengerjaan Komponen"/>
        </tree>
    </field>
  </record>
  <!-- end of component master tree -->

  <!-- start of component master form -->
  <record id="view_component_master_form" model="ir.ui.view">
    <field name="name">component.master.form</field>
    <field name="model">component.master</field>
    <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="process_time"/>
            </group>
          </sheet>
        </form>
    </field>
  </record>
  <!-- end of component master form -->

  <!-- start of component master action view -->
  <record id="action_component_master" model="ir.actions.act_window">
    <field name="name">Komponen</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">component.master</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Buat komponen baru!
      </p>
    </field>
  </record>
  <!-- end of component master action view -->

  <!-- start of component master menu view -->
  <menuitem id="menu_component"
          name="Component Creator"
          action="action_component_master"
          parent="menu_component_creator_root"
          sequence="0"/>
  <!-- start of component master menu view -->


</odoo>