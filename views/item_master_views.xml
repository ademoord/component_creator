<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

  <!-- start of item master tree -->
  <record id="view_item_master_tree" model="ir.ui.view">
    <field name="name">item.master.tree</field>
    <field name="model">item.master</field>
    <field name="arch" type="xml">
        <tree>
          <header>
            <button name="action_import_csv" type="object" string="Import CSV"/>
          </header>
          <field name="name" string="Nama Item"/>
          <field name="component_id" string="Nama Komponen"/>
          <field name="percentage" string="Bobot Persentase Komponen (%)"/>
          <field name="processing_start_date" string="Tanggal Mulai Pengerjaan"/>
          <field name="finished_real_date" string="Real Tanggal Selesai"/>
        </tree>
    </field>
  </record>
  <!-- end of item master tree -->

  <!-- start of item master form -->
  <record id="view_item_master_form" model="ir.ui.view">
    <field name="name">item.master.form</field>
    <field name="model">item.master</field>
    <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="component_id"/>
              <field name="percentage"/>
              <field name="processing_start_date"/>
              <field name="finished_real_date"/>
            </group>
          </sheet>
        </form>
    </field>
  </record>
  <!-- end of item master form -->

  <!-- start of item master action view -->
  <record id="action_item_master" model="ir.actions.act_window">
    <field name="name">Item</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">item.master</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Buat item baru!
      </p>
    </field>
  </record>
  <!-- end of item master action view -->

  <!-- start of component creator menu view -->
  <menuitem id="menu_item"
          name="Item Creator"
          action="action_item_master"
          parent="menu_component_creator_root"
          sequence="0"/>
  <!-- start of component creator menu view -->


  </data>
</odoo>