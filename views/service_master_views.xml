<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- start of service master tree -->
  <record id="view_service_master_tree" model="ir.ui.view">
    <field name="name">service.master.tree</field>
    <field name="model">service.master</field>
    <field name="arch" type="xml">
        <tree>
          <field name="name" string="Nama Layanan"/>
          <field name="emp_sum" string="Jumlah Keperluan Karyawan"/>
          <field name="desc" string="Deskripsi Layanan"/>
        </tree>
  
        <!-- <template id="example_template">
          <div>
              <input type="file" class="example_file_input" style="display: none;"/>
              <button class="btn btn-primary btn-sm o_list_button_upload_alkeba" 
                  accesskey="f" text="Import CSV JS"/>
                  onclick="$('.example_file_input').click()"/>
          </div>
        </template>

        <script type="text/javascript"/> -->

    </field>
  </record>
  <!-- end of service master tree -->

  <!-- start of service master form -->
  <record id="view_service_master_form" model="ir.ui.view">
    <field name="name">service.master.form</field>
    <field name="model">service.master</field>
    <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name" string="Nama Layanan"/>
              <field name="emp_sum" string="Jumlah Keperluan Karyawan"/>
              <field name="desc" string="Deskripsi Layanan"/>
            </group>
          </sheet>
        </form>
    </field>
  </record>
  <!-- end of service master form -->

  <!-- start of service master action view -->
  <record id="action_service_master" model="ir.actions.act_window">
    <field name="name">Service</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">service.master</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Buat layanan baru!
      </p>
    </field>
  </record>
  <!-- end of service master action view -->

  <!-- start of service master menu view -->
  <menuitem id="menu_service"
          name="Service Creator"
          action="action_service_master"
          parent="menu_component_creator_root"
          sequence="0"/>
  <!-- start of service master menu view -->


</odoo>