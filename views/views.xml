<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- component master menu view -->
  <menuitem id="menu_component_creator_root"
            name="Component Master"
            sequence="0"/>
  <menuitem id="menu_component_master"
            name="Component Name"
            parent="menu_component_creator_root"
            sequence="0"/>
  <menuitem id="menu_component"
            name="Component Creator"
            parent="menu_component_master"
            sequence="0"/>

  <!-- component master action view -->
  <record id="action_component_master" model="ir.actions.act_window">
    <field name="name">Komponen</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">component.master</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_nocontenct_smiling_face">
        Buat komponen baru!
      </p>
    </field>
  </record>

</odoo>